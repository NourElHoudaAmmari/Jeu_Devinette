<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFDFF">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="47dp"
            android:background="#4CAF50"
            android:text="Jouer et Deviner le nombre caché"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Nom du Joueur :"
            android:textSize="20sp"
            android:layout_marginTop="152dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:id="@+id/joueurName"/>

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:hint="Nom de joueur"
            android:id="@+id/edit1"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Niveau de jeu :"
            android:textSize="20sp"
            android:layout_marginTop="280dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:id="@+id/joueurNiveau"/>
        <RadioGroup
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/radioGroup">
         <RadioButton
             android:layout_width="123dp"
             android:layout_height="57dp"
             android:id="@+id/rdbtn1"
             android:text="Débutant"
             android:textColor="@color/black"
             android:textSize="18sp"/>
            <RadioButton
                android:layout_width="123dp"
                android:layout_height="57dp"
                android:id="@+id/rdbtn2"
                android:text="Expert"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </RadioGroup>
        <Button
            android:id="@+id/jouer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="500dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/button"
            android:onClick="OnClickBtnPlay"
            android:text="Jouer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold">

        </Button>

    </RelativeLayout>
</LinearLayout>